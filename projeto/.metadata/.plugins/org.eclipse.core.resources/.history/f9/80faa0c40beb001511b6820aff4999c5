import java.util.Scanner;


public class Main {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		  int op;
		  do {
		   System.out.println(" \n 1. Multiplication");
		   System.out.println("2. Line Multiplication");
		   System.out.println("Selection?: ");
		   Scanner a = new Scanner(System.in);
		   op = a.nextInt();

		   System.out.println("Dimensions: lins cols ? ");
		   int lin = a.nextInt();
		   int col = a.nextInt();

		   switch (op){
		   case 1: 
		    onMult(lin, col);
		    break;
		   case 2:
		    onMultLine(lin, col);
		    break;
		   }
		  }while (op != 0);
		 }

	}
	
	
	public void onMult(int lin, int col)
	{
		double[][] pha = null;
		  double[][] phb = null;
		  double[][] phc = null;
		  for(int i=0; i<lin; i++)
		   for(int j=0; j<col; j++)
		    pha[i][j] = (double)1.0;
		  
		  for(int i=0; i<lin; i++)
		   for(int j=0; j<col; j++)
		    phb[i][j] = (double)(i+1);
		
	}

}
